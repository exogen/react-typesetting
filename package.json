{
  "name": "react-typesetting",
  "version": "0.1.0",
  "main": "lib/index.js",
  "module": "lib-es/index.js",
  "jsnext:main": "lib-es/index.js",
  "files": [
    "lib",
    "lib-es"
  ],
  "scripts": {
    "build": "npm run build:lib && npm run build:lib-es && npm run build:demo && npm run build:docs",
    "build:demo": "BABEL_ENV=es:production webpack --env.production --config=webpack.config.demo.js",
    "build:docs": "npm run build:docs:components && npm run build:docs:toc",
    "build:docs:components": "react-docgen --pretty --exclude '**/*.spec.js' src/components | scripts/component-docs.js | scripts/update-docs.js docs/README.md",
    "build:docs:toc": "doctoc --github --notitle docs/README.md",
    "build:lib": "BABEL_ENV=production babel src -d lib",
    "build:lib-es": "BABEL_ENV=es:production babel src -d lib-es",
    "clean": "npm run clean:lib && npm run clean:lib-es && npm run clean:docs",
    "clean:docs": "rm -rf docs/dist",
    "clean:lib": "rm -rf lib",
    "clean:lib-es": "rm -rf lib-es",
    "fmt": "npm run format",
    "format": "npm run format:prettier && npm run format:standard",
    "format:prettier": "prettier --write --no-semi --single-quote '{,{demo,scripts,src}/**/}*.js'",
    "format:standard": "standard --fix || true",
    "lint": "standard --verbose | snazzy",
    "prepublish": "npm run clean && npm run build",
    "start": "BABEL_ENV=es:development webpack-dev-server -d --env.development --config=webpack.config.demo.js",
    "test": "karma start",
    "test:watch": "npm test -- --no-single-run"
  },
  "dependencies": {
    "fontfaceobserver": "^2.0.9",
    "jquery": "^3.2.1",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-draggable": "^2.2.3",
    "simple-react-docgen": "^1.1.1",
    "styled-components": "^1.4.5",
    "typeset": "^0.2.2"
  },
  "devDependencies": {
    "ava": "^0.19.1",
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.2",
    "babel-loader": "^6.4.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.24.1",
    "chai": "^3.5.0",
    "css-loader": "^0.28.0",
    "doctoc": "^1.3.0",
    "enzyme": "^2.8.2",
    "escape-html": "^1.0.3",
    "html-webpack-harddisk-plugin": "^0.1.0",
    "html-webpack-plugin": "^2.28.0",
    "html-webpack-template": "^6.0.1",
    "karma": "^1.6.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-mocha": "^1.3.0",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.3",
    "mocha": "^3.2.0",
    "nyc": "^10.1.2",
    "prettier": "^1.1.0",
    "react-addons-test-utils": "^15.5.1",
    "react-docgen": "^2.14.0",
    "react-hot-loader": "next",
    "snazzy": "^7.0.0",
    "standard": "^10.0.2",
    "style-loader": "^0.16.1",
    "webpack": "^2.4.1",
    "webpack-dashboard": "next",
    "webpack-dev-server": "^2.4.2"
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "/docs/dist"
    ],
    "globals": [
      "describe",
      "it"
    ]
  }
}
